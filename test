import telebot
from telebot import types #–º–æ–¥—É–ª—å –¥–ª—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –∫–Ω–æ–ø–æ–∫

import webbrowser

bot = telebot.TeleBot('6759261764:AAEgKy3wlYy3sLicBMWRR9XPk_9GF4mDDHg')

 #–ù–ò–ñ–ï –º—ã –Ω–∞ –∏—Å—Ç–æ—á–Ω–∏–∫–µ –≥–¥–µ –∑–∞–ø—É—â–µ–Ω –±–æ—Ç –æ—Ç–∫—Ä—ã–≤–∞–µ–º —Å—Ç—Ä–∞–Ω–∏—Ü—É –≤ –∏–Ω–µ—Ç–µ
@bot.message_handler(commands=['ozon'])
def site(message):
    webbrowser.open('https://www.ozon.ru/')

@bot.message_handler(commands=['downdetector'])
def site(message):
    webbrowser.open('https://downdetector.com/')

#–Ω–∏–∂–µ —Ñ–∏–∫—Å–∏—Ä—É–µ–º, —á—Ç–æ –±—É–¥–µ—Ç –¥–µ–ª–∞—Ç—å –±–æ—Ç –ø–æ –∫–æ–º–∞–Ω–¥–µ —Å—Ç–∞—Ä—Ç
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.send_message(message.chat.id, f'–ü—Ä–∏–≤–µ—Ç) {message.from_user.first_name}')

#–Ω–∏–∂–µ —Ñ–∏–∫—Å–∏—Ä—É–µ–º, —á—Ç–æ –±—É–¥–µ—Ç –¥–µ–ª–∞—Ç—å –±–æ—Ç –ø–æ –∫–æ–º–∞–Ω–¥–µ —Ö–µ–ª–ø
@bot.message_handler(commands=['help'])
def help(message):
    markup = types.InlineKeyboardMarkup()
    btn1 = types.InlineKeyboardButton('–ü–µ—Ä–µ–π—Ç–∏ –Ω–∞ —Å–∞–π—Ç Ozon', url='https://www.ozon.ru/')#—Å–æ–∑–¥–∞—é –æ—Ç–¥–µ–ª—å–Ω—É—é –∫–Ω–æ–ø–∫—É , url='https://www.ozon.ru/'
    markup.row(btn1) #–≤ –º–µ—Ç–æ–¥ –±—É–¥—É –¥–æ–±–∞–≤–ª—è—Ç—å –∫–Ω–æ–ø–∫—É, –µ—Å–ª–∏ –¥–æ–±–∞–≤–∏—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–æ –∫–Ω–æ–ø–æ–∫ –æ–Ω–∏ –±—É–¥—É—Ç –≤ –æ–¥–Ω–æ–π —Å—Ç—Ä–æ–∫–µ
    btn2 = types.InlineKeyboardButton('–ü–µ—Ä–µ–π—Ç–∏ –Ω–∞ —Å–∞–π—Ç Downdetector', url='https://downdetector.com/')
    markup.row(btn2)
    btn3 = types.InlineKeyboardButton('–£–¥–∞–ª–∏—Ç—å –ª–∞—Å—Ç —Ç–µ–∫—Å—Ç', callback_data='delete')
    markup.row(btn3)
    bot.reply_to(message, '–õ–æ–≤–∏ —Å–≤–æ–∏ –∫–Ω–æ–ø–∫–∏, —Ö–∞–∫–µ—Äü§ñ', reply_markup=markup)#—Ç—É—Ç –º—ã –∫ –æ—Ç–≤–µ—Ç—É –¥–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞ –Ω–∞ —Å–∞–π—Ç –æ–∑–æ–Ω–∞

@bot.callback_query_handler(func=lambda callback: True)#—Å–æ–∑–¥–∞–µ–º –¥–µ–∫–æ—Ä–∞—Ç–æ—Ä, —á—Ç–æ–±—ã –∫–Ω–æ–ø–∫–∞ callback_data —Ä–∞–±–æ—Ç–∞–ª–∏
def callback_message(callback):
    if callback.data == 'delete':
        bot.delete_message(callback.message.chat.id, callback.message.message_id - 1)#—Ñ–∏–∫—Å–∏—Ä—É—é –º–∏–Ω—É—Å 1 —Ç.–∫. –Ω—É–∂–Ω–æ —É–¥–∞–ª–∏—Ç—å –Ω–µ –ø–æ—Å–ª–µ–¥–Ω–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ —Ç.–∫. —ç—Ç–æ –æ—Ç–≤–µ—Ç –æ—Ç –±–æ—Ç–∞, –∞ –ø—Ä–µ–¥–ø–æ—Å–ª–µ–¥–Ω–µ–µ
        
#–∑–∞—Å—Ç–∞–≤–ª—è–µ–º –±–æ—Ç–∞ –æ—Ç–≤–µ—á–∞—Ç—å –Ω–∞ –Ω–∞—à –ø—Ä–∏–≤–µ—Ç –∏ –¥—Ä—É–≥–∏–µ —Ñ—Ä–∞–∑—ã –≤ —Ç–æ–º —á–∏—Å–ª–µ –ø–æ —Ñ—Ä–∞–∑–∞–º –≤—ã–∑—ã–≤–∞—Ç—å –∫–Ω–æ–ø–∫–∏
@bot.message_handler()
def info(message):
    markup = types.InlineKeyboardMarkup()
    btn1 = types.InlineKeyboardButton('–ü–µ—Ä–µ–π—Ç–∏ –Ω–∞ —Å–∞–π—Ç Ozon', url='https://www.ozon.ru/')#—Å–æ–∑–¥–∞—é –æ—Ç–¥–µ–ª—å–Ω—É—é –∫–Ω–æ–ø–∫—É , url='https://www.ozon.ru/'
    markup.row(btn1) #–≤ –º–µ—Ç–æ–¥ –±—É–¥—É –¥–æ–±–∞–≤–ª—è—Ç—å –∫–Ω–æ–ø–∫—É
    btn2 = types.InlineKeyboardButton('–ü–µ—Ä–µ–π—Ç–∏ –Ω–∞ —Å–∞–π—Ç Downdetector', url='https://downdetector.com/')
    markup.row(btn2) #–≤ –º–µ—Ç–æ–¥ –±—É–¥—É –¥–æ–±–∞–≤–ª—è—Ç—å –∫–Ω–æ–ø–∫—É
    btn3 = types.InlineKeyboardButton('–£–¥–∞–ª–∏—Ç—å –ª–∞—Å—Ç —Ç–µ–∫—Å—Ç', callback_data='delete')
    markup.row(btn3) #2 –∫–Ω–æ–ø–∫–∏ –≤ –æ–¥–Ω–æ–π –ª–∏–Ω–∏–∏
    if message.text.lower() == '–ø—Ä–∏–≤–µ—Ç':
        bot.send_message(message.chat.id, f'–ü—Ä–∏–≤–µ—Ç) {message.from_user.first_name}')
    elif message.text.lower() == 'id':
         bot.reply_to(message, f'ID: {message.from_user.id}')
    elif message.text.lower() == '—Å–∞–π—Ç':
         bot.reply_to(message, '–õ–æ–≤–∏ —Å–≤–æ–∏ –∫–Ω–æ–ø–∫–∏, —Ö–∞–∫–µ—Äü§ñ', reply_markup=markup)

#–∑–∞—Å—Ç–∞–≤–ª—è–µ–º –±–æ—Ç–∞ –æ—Ç–≤–µ—á–∞—Ç—å –Ω–∞ –ø—Ä–∏—Å–ª–∞–Ω–Ω–æ–µ —Ñ–æ—Ç–æ + –≤—ã–∑—ã–≤–∞—Ç—å –∫–Ω–æ–ø–∫–∏  
@bot.message_handler(content_types=['photo'])#–º–æ–∂–Ω–æ –¥–æ–±–∞–≤–ª—è—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–æ —Ç–∏–ø–æ–≤ —Ñ–∞–π–ª–æ–≤ –Ω–∞–ø—Ä–∏–º–µ—Ä –∞—É–¥–∏–æ –∏ –≤–∏–¥–µ–æ, –±–æ—Ç –∫–æ—Ç–æ—Ä—ã–π –æ—Ç–≤–µ—á–∞–µ—Ç –Ω–∞ –æ—Ç–ø—Ä–∞–≤–∫—É —Ñ–æ—Ç–æ –≤ –±–æ—Ç–∞
def get_photo(message):
    markup = types.InlineKeyboardMarkup()
    btn1 = types.InlineKeyboardButton('–ü–µ—Ä–µ–π—Ç–∏ –Ω–∞ —Å–∞–π—Ç –¥–ª—è –ø—Ä–æ–¥–∞–∂–∏', url='https://www.ozon.ru/')#—Å–æ–∑–¥–∞—é –æ—Ç–¥–µ–ª—å–Ω—É—é –∫–Ω–æ–ø–∫—É
    markup.row(btn1) #–≤ –º–µ—Ç–æ–¥ –±—É–¥—É –¥–æ–±–∞–≤–ª—è—Ç—å –∫–Ω–æ–ø–∫—É
    btn2 = types.InlineKeyboardButton('–£–¥–∞–ª–∏—Ç—å —Ñ–æ—Ç–æ', callback_data='delete')
    btn3 = types.InlineKeyboardButton('–ò–∑–º–µ–Ω–∏—Ç—å —Ç–µ–∫—Å—Ç', callback_data='edit')
    markup.row(btn2, btn3) #2 –∫–Ω–æ–ø–∫–∏ –≤ –æ–¥–Ω–æ–π –ª–∏–Ω–∏–∏
    bot.reply_to(message, '–§–æ—Ç–æ –ø—Ä–æ—Å—Ç–æ –æ–≥–æ–Ω—å! –ü—Ä–æ–¥–∞–≤–∞–π!', reply_markup=markup)#—Ç—É—Ç –º—ã –∫ –æ—Ç–≤–µ—Ç—É –¥–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞ –Ω–∞ —Å–∞–π—Ç –æ–∑–æ–Ω–∞

@bot.callback_query_handler(func=lambda callback: True)#—Å–æ–∑–¥–∞–µ–º –¥–µ–∫–æ—Ä–∞—Ç–æ—Ä, —á—Ç–æ–±—ã –∫–Ω–æ–ø–∫–∞ callback_data —Ä–∞–±–æ—Ç–∞–ª–∏
def callback_message(callback):
    if callback.data == 'delete':
        bot.delete_message(callback.message.chat.id, callback.message.message_id - 1)#—Ñ–∏–∫—Å–∏—Ä—É—é –º–∏–Ω—É—Å 1 —Ç.–∫. –Ω—É–∂–Ω–æ —É–¥–∞–ª–∏—Ç—å –Ω–µ –ø–æ—Å–ª–µ–¥–Ω–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ —Ç.–∫. —ç—Ç–æ –æ—Ç–≤–µ—Ç –æ—Ç –±–æ—Ç–∞, –∞ –ø—Ä–µ–¥–ø–æ—Å–ª–µ–¥–Ω–µ–µ
    elif callback.data == 'edit':
        bot.edit_message_text('–ò–∑–º–µ–Ω–∏–ª —Ç–µ–∫—Å—Ç –∫–∞–∫ –∏ –ø—Ä–æ—Å–∏–ª', callback.message.chat.id, callback.message.message_id)


#–∑–∞—Å—Ç–≤–ª—è–µ–º –±–æ—Ç–∞ —Ä–∞–±–æ—Ç–∞—Ç—å –±–µ—Å–∫–æ–Ω–µ—á–Ω–æ, –û–ë–Ø–ó–ê–¢–ï–õ–¨–ù–û –í –ö–û–ù–¶–ï –∫–æ–¥–∞
bot.infinity_polling()